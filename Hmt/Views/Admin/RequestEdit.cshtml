@model Hmt.Models.Request


@{
    ViewBag.Title = "Request Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-12">
            <h1 class="text-center" style="margin-top:50px;margin-bottom:50px">Approve Request</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @using (Html.BeginForm("RequestEdit", "Admin", FormMethod.Post))
            {
                <table class="table table-borderless">

                    <tr>
                        <td class="text-left" style="width:120px">
                            @Html.Label("Status")
                        </td>

                        <td>
                            @*@Html.TextBoxFor(a => a.req_status, null, new { @class = "form-control" })*@
                            @Html.DropDownListFor(a => a.req_status, new List<SelectListItem>
                                {
                            new SelectListItem() {Text = "Pending", Value="Pending"},
                            new SelectListItem() {Text = "Approved", Value="Approved"},

                                }, new { style = "width: 100%;height:40px" })
                        </td>

                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.Label("Amount")
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.req_amount, null, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.Label("Date")
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.req_date, null, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.Label("User Id")
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.emp_id, null, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.Label("Product id")
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.pro_id, null, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                    </tr>

                    <tr>

                        <td></td>
                        <td>
                            <input type="submit" value="Save Changes" class="btn btn-success" />
                            <a class="btn btn-info" href="@Url.Action("Requests","Admin")">Back to list</a>
                        </td>
                    </tr>

                </table>

            }
        </div>

    </div>





</div>
<link href="~/Content/css/adminpanel.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/styles.css" rel="stylesheet" />
