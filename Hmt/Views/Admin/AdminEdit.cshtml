@model Hmt.Models.Admin
@{
    ViewBag.Title = "Edit Admins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-12">
            <h1 class="text-center" style="margin-top:50px;margin-bottom:50px">Edit Admins Info</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @using (Html.BeginForm("AdminEdit", "Admin", FormMethod.Post))
            {
                <table class="table table-borderless">

                    <tr>
                        <td class="text-left" style="width:120px">
                            @Html.DisplayNameFor(model => model.admin_fname)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.admin_fname, null, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.admin_fname, "", new { @class = "text-danger" })
                        </td>

                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.DisplayNameFor(model => model.admin_lname)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.admin_lname, null, new { @class = "form-control", autocomplete = "off", required = "required" })
                            @Html.ValidationMessageFor(model => model.admin_lname, "", new { @class = "text-danger" })

                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.DisplayNameFor(model => model.admin_email)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.admin_email, null, new { @class = "form-control", autocomplete = "off", required = "required" })
                            @Html.ValidationMessageFor(model => model.admin_email, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.DisplayNameFor(model => model.admin_username)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.admin_username, null, new { @class = "form-control", autocomplete = "off", required = "required" })
                            @Html.ValidationMessageFor(model => model.admin_username, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td class="text-left">
                            @Html.DisplayNameFor(model => model.admin_password)
                        </td>
                        <td>
                            @Html.TextBoxFor(a => a.admin_password, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.admin_password, "", new { @class = "text-danger", required = "required" })
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Save Changes" class="btn btn-success" />
                            <a class="btn btn-info" href="@Url.Action("AdminInfo","Admin")">Back to list</a>
                        </td>
                    </tr>
                </table>

            }
        </div>

    </div>



</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/adminpanel.css" rel="stylesheet" />
<link href="~/Content/css/styles.css" rel="stylesheet" />
